 package com.leadsponge.IO.repository;

import java.util.List;

import org.springframework.data.domain.Page;
import org.springframework.data.domain.Pageable;
import org.springframework.data.jpa.repository.JpaRepository;

import com.leadsponge.IO.models.Usuario;

public interface UsuarioRepository  extends JpaRepository<Usuario, Long>{
	Usuario findByLogin(String login);
	public List<Usuario> findByRoles(String permissaoDescricao);
	public Page<Usuario> findByNomeContaining(String nome, Pageable pageable);
}
